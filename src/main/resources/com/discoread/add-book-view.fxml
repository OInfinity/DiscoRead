<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.discoread.controller.AddBookController"
            prefWidth="900" prefHeight="600">

    <!-- ========= HEADER BAR ========= -->
    <top>
        <AnchorPane styleClass="header-bar" prefHeight="70">
            <Label text="Add New Book" layoutX="25" layoutY="20"
                   style="-fx-text-fill:white; -fx-font-size:22px;"/>
        </AnchorPane>
    </top>


    <!-- ========= INPUT FORM ========= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="14">
            <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

            <TextField fx:id="titleField" promptText="Book Title" prefWidth="380"/>
            <TextField fx:id="authorField" promptText="Author Name" prefWidth="380"/>
            <TextField fx:id="yearField" promptText="Publication Year" prefWidth="380"/>
            <TextField fx:id="genreField" promptText="Genre / Category" prefWidth="380"/>
            <TextField fx:id="isbnField" promptText="ISBN" prefWidth="380"/>
            <TextField fx:id="locationField" promptText="Library Location (Shelf/Rack)" prefWidth="380"/>

            <TextArea fx:id="descriptionField" promptText="Short Description"
                      prefWidth="380" prefHeight="110" wrapText="true"/>

            <TextField fx:id="coverURLField" promptText="Cover Image URL" prefWidth="380"/>

            <!-- ⭐ GOOGLE BOOKS link -->
            <TextField fx:id="googleLinkField" promptText="Google Books URL (Optional)" prefWidth="380"/>

            <!-- ⭐ PDF IMPORT FIELD -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="pdfField" promptText="No PDF selected" prefWidth="260"/>
                <Button text="Choose PDF" onAction="#onChoosePDF"
                        style="-fx-background-color:#1976D2; -fx-text-fill:white;"/>
            </HBox>

            <!-- ⭐ Search online button -->
            <Button text="Search Google Books Online"
                    onAction="#openGoogleSearch"
                    prefWidth="380"
                    style="-fx-font-size:14px; -fx-background-color:#1976D2; -fx-text-fill:white;"/>

            <!-- BUTTONS -->
            <HBox spacing="12">
                <Button text="Save Book" onAction="#onSaveBook" prefWidth="180"/>
                <Button text="Cancel" onAction="#onCancel" prefWidth="180"
                        style="-fx-background-color:#B0BEC5; -fx-text-fill:black;"/>
            </HBox>

            <Label fx:id="statusLabel" style="-fx-text-fill:red; -fx-font-size:14px;"/>
        </VBox>
    </center>

</BorderPane>
