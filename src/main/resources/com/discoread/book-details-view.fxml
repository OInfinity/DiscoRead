<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.discoread.controller.BookDetailsController"
            prefWidth="900" prefHeight="600">

    <!-- HEADER -->
    <top>
        <AnchorPane styleClass="header-bar" prefHeight="70">
            <Label text="Book Details" layoutX="25" layoutY="20"
                   style="-fx-text-fill:white; -fx-font-size:22px;"/>
        </AnchorPane>
    </top>


    <center>
        <HBox spacing="30" alignment="CENTER">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

            <!-- BOOK COVER -->
            <ImageView fx:id="coverImage" fitWidth="220" fitHeight="300"
                       style="-fx-effect:dropshadow(two-pass-box, rgba(0,0,0,0.3),10,0,0,2);"/>


            <!-- BOOK DETAILS SIDE -->
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                <Label fx:id="titleLabel" style="-fx-font-size:26px; -fx-font-weight:bold;"/>
                <Label fx:id="authorLabel" style="-fx-font-size:16px; -fx-text-fill:#424242;"/>
                <Label fx:id="isbnLabel" style="-fx-font-size:14px; -fx-text-fill:#616161;"/>
                <Label fx:id="yearLabel"/>
                <Label fx:id="genreLabel"/>
                <Label fx:id="locationLabel"/>

                <!-- GOOGLE BOOKS LINK -->
                <Label fx:id="googleLinkLabel"
                       style="-fx-text-fill:#1976D2; -fx-font-size:14px; -fx-underline:true;"/>

                <Separator/>

                <!-- DESCRIPTION AREA -->
                <TextArea fx:id="descriptionArea" editable="false" wrapText="true"
                          prefWidth="400" prefHeight="200"
                          style="-fx-control-inner-background:#FAFAFA;"/>

                <!-- â­ NEW PDF OPEN BUTTON -->
                <Button fx:id="openPdfButton"
                        text="ðŸ“„ Open PDF"
                        visible="false"
                        prefWidth="200"
                        style="-fx-background-color:#1976D2; -fx-text-fill:white; -fx-font-size:14px; -fx-font-weight:bold;"
                />


                <!-- ACTION BUTTONS -->
                <HBox spacing="15">
                    <Button text="Edit Book" onAction="#onEditBook" prefWidth="150"/>
                    <Button text="Close" onAction="#onClose" prefWidth="150"
                            style="-fx-background-color:#B0BEC5; -fx-text-fill:black;"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

</BorderPane>
